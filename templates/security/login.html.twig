{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}


{% block body %}
    <style>

        html, body {
            height: 100%;
            background: #f5f5f5 !important;
        }
        button.btn.btn-primary.btn-sm {
            padding: 5px 47px;
            margin-left:68px;
            background-color:#4a3ba0;
        }
    </style>

    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
    <!-- Bootstrap 3.3.7 -->
    <link rel="stylesheet" href="{{ asset('bower_components/bootstrap/dist/css/bootstrap.css')}}">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="{{ asset('bower_components/font-awesome/css/font-awesome.min.css')}}">
    <!-- Ionicons -->
    <link rel="stylesheet" href="{{ asset('bower_components/Ionicons/css/ionicons.min.css')}}">
    <!-- jvectormap -->
    <link rel="stylesheet" href="{{ asset('bower_components/jvectormap/jquery-jvectormap.css')}}">
    <!-- Theme style -->
    <link rel="stylesheet" href="{{asset('dist/css/AdminLTE.css')}}">

    <link rel="stylesheet" href=" {{ asset('plugins/iCheck/square/blue.css')}}">
    <!-- Google Font -->
    <div class="login-box">

        <div class="login-logo">
            <img class="w120" alt="logo" src="{{ asset('dist/img/logo.jpg' ) }}"  style="vertical-align: bottom; border:0;" />
        </div>
        <!-- /.login-logo -->
        <div class="login-box-body">
            <h2 class="login-box-msg">Authentification</h2>

            <form method="post">

                {%if error%}
                    <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                {%endif%}


                <div class="form-group has-feedback">
                    <input type="text" id="inputEmail"  name="email" class="form-control" placeholder="{{ 'Login'|trans }}" required="required" value="{{last_username}}" />
                    <span class="glyphicon glyphicon-envelope form-control-feedback"></span>
                </div>
                <div class="form-group has-feedback">
                    <input type="password" name="password" id="password" class="form-control" placeholder="{{ 'Mot de passe'|trans }}" required="required" />
                    <span class="glyphicon glyphicon-lock form-control-feedback"></span>
                </div>
                <input type="hidden" name="_csrf_token"value="{{ csrf_token('authenticate') }}" >

                <button class="btn  btn-primary btn-sm" type="submit"> Se connecter</button>
            </form>



        </div>

    </div>

{% endblock%}