                </tr>
            </thead>
            <tbody>
                {% for institution in institutions %}
                    <tr>
                       
                        <td>{{institution.title}}</td>
                        <td>{{institution.phone}}</td>
                      
                        <td>
                            <a href="{{path('edit-institution',{'id':institution.id})}}" class="btn btn-social-icon btn-dropbox"><i class="fa fa-edit"></i></a>
