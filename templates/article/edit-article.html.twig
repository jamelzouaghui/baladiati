

<style>
    .form-inline .form-group {
        display: block; 

    }
    .form-inline .form-control {
        display: block; 
        width: 100%; 

    }
</style>

<div class="modal fade" id="modal-article-edit-{{id}}">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title">Modifier Article</h4>
            </div>
            <div class="modal-body">
                {{ form_start(form, { 'action': path('edit-article', { 'id': id }), 'attr': { 'class': 'edit-article' } }) }}

                <div class="form-group">

                    {{ form_widget(form.title)}}
                </div>
               
                <div class="form-group">
                    {{ form_widget(form.content|raw)}}
                </div>
                <div class="form-group">
                    {#{%if article.photo is empty %}
                        <img src="{{ asset('uploads/users/avatar.jpg' ) }}" class="img-circle" alt="Article " style="width:100px;height:100px;" >

                    {%else%}
                        <img src="{{ asset('uploads/articles/' ~ article.photo) }}" class="img-circle" style="width:100px;height:100px;" alt="Article Image" >
                    {%endif%}
                    {{ form_widget(form.photo)}}
#}
                </div>

            </div>
            <div class="modal-footer">

                <input type="submit" class="btn btn-primary"></input>
            </div>
            {{ form_end(form) }}
        </div>
        <!-- /.modal-content -->
    </div>
    <!-- /.modal-dialog -->
</div>