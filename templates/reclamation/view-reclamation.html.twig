<style>
    .form-inline .form-group {
        display: block; 

    }
    .form-inline .form-control {
        display: block; 
        width: 100%; 

    }
</style>

<div class="modal fade" id="modal-reclamation-view-{{id}}">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title">Voir RÃ©clamation</h4>
            </div>
            <div class="modal-body">




                <div class="media">
                    <div class="media-left">
                        <a href="#" class="ad-click-event">
                          
                            {%if reclamation.photo is empty %}
                                <img src="{{ asset('uploads/articles/avatar-article.png' ) }}" class="img-circle" style="width: 80px;height: 80px;border-radius: 4px;box-shadow: 0 1px 3px rgba(0,0,0,.15);" >

                            {%else%}
                                <img src="{{ asset('uploads/articles/' ~ reclamation.photo) }}" class="img-circle" style="width: 80px;height:80px;border-radius: 4px;box-shadow: 0 1px 3px rgba(0,0,0,.15);" >
                            {%endif%}

                        </a>
                    </div>
                    <div class="media-body">
                        <div class="clearfix">
                            <p class="pull-right">

                            </p>

                            <h4 style="margin-top: 0;float:left"> {{reclamation.name}}  <div class="bb" style="font-weight:bold;float:right;margin-left:10px;clear:both;">{{reclamation.type}}<div/></h4>
                            <br>
                            <p> {{reclamation.commentaire|raw}}</p>
                            <p style="margin-bottom: 0">
                                <i class="fa fa-shopping-cart margin-r5"></i>  {{reclamation.createdAt |date('d/m/Y')}}
                            </p>
                        </div>
                    </div>
                </div>

            </div>
            <div class="modal-footer">


                <button type="button" class="btn btn-primary" data-dismiss="modal">Fermer</button>
            </div>

        </div>
        <!-- /.modal-content -->
    </div>
    <!-- /.modal-dialog -->
</div>