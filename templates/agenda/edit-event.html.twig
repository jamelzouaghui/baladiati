<style>
    .form-inline .form-group {
        display: block; 

    }
    .form-inline .form-control {
        display: block; 
        width: 100%; 

    }
</style>

<div class="modal fade" id="modal-event-edit-{{id}}">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title">Modifier Evénement</h4>
            </div>
            <div class="modal-body">
                {{ form_start(form, { 'action': path('edit-event', { 'id': id }), 'attr': { 'class': 'edit-event' } }) }}

                <div class="form-group">

                    <label >Titre</label>
                    {{ form_widget(form.title)}}
                </div>
                <div class="form-group">
                    <label >Date de création</label>
                    {{ form_widget(form.dateCreation)}}
                </div>
                <div class="form-group">
                    <label >Adresse</label>
                    {{ form_widget(form.adress)}}
                </div>

            </div>
            <div class="modal-footer">
                
                <input type="submit" class="btn btn-primary"></input>
            </div>
            {{ form_end(form) }}
        </div>
        <!-- /.modal-content -->
    </div>
    <!-- /.modal-dialog -->
</div>