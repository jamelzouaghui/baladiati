{% extends 'template.html.twig' %}
{% block headTile %}

    <ol class="breadcrumb">
        <li>
            {#<a href="{{path('add-user')}}"><i class="fa fa-dashboard"></i> Ajouter User</a>#}
            <a href="{{path('add-user')}}" type="button" class="btn btn-block btn-success"> Ajouter User</a>
        </li>

    </ol>
{% endblock %}
{% block body %}
    <div class="box-body">
        <table id="users" class="table table-striped table-bordered dt-responsive nowrap dataTable no-footer cell-border">
            <thead>
                <tr>
                    <th>Photo</th>
                    <th>Nom et Prenom</th>
                    <th>Email</th>
                    <th>Profession</th>
                    <th>cv</th>
                    <th>Date de Cr√©ation</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                {% for user in users %}
                    <tr>
                        <td> 

                            <div class="pull-left image">
                                <img src="{{ asset('uploads/users/' ~ user.photo) }}" class="img-circle" alt="User Image" style="width: 50px;">
                            </div>

                        </td>
                        <td>{{user.firstname}}{{user.firstname}}</td>
                        <td>{{user.email}}</td>
                        <th>{{user.profession}}</th>
                        <th>{{user.cv}}</th>
                        <td>{{user.createdAt |date('d/m/Y')}}</td>
                        <td>
                            <a href="{{path('edit-user',{'id':user.id})}}" class="btn btn-social-icon btn-dropbox"><i class="fa fa-edit"></i></a>
                            <a href="{{path('delete-user',{'id':user.id})}}" class="btn btn-social-icon btn-dropbox"><i class="fa fa-times"></i></a>
                        </td>
                    </tr>
                {%endfor%}
            </tbody>

        </table>
    </div>
{% endblock %}