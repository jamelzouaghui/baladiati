{% block body %}
    <style>
        #map_wrapper {
            height: 400px;
        }

        #map_canvas {
            width: 100%;
            height: 100%;
        }
    </style>
    <div class="box-body">
        <div class="row">
            <div id="map_wrapper">
                <div id="map_canvas" class="mapping"></div>
            </div>
        </div>
        <table id="example2" class="table table-striped table-bordered dt-responsive nowrap dataTable no-footer cell-border">
            <thead>
                <tr>
                    <th>photo</th>
                    <th>Titre Réclamation</th>
                    <th>Commentaire</th>
                    <th>Date de Réclamation</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                {% for reclamation in reclamations %}

                <td>
                    {%if reclamation.photo is empty %}
                        <img src="{{ asset('uploads/users/avatar.jpg' ) }}" class="attachment-img" alt="reclamation " >

                    {%else%}
                        <img src="{{ asset('uploads/users/' ~ reclamation.photo) }}" class="attachment-img" alt="reclamation Image" >
                    {%endif%}
                </td>

                <td>{{reclamation.name}}</td>
                <td>{{reclamation.commentaire}}</td>
                <td>{{reclamation.createdAt |date('d/m/Y')}}</td>

                <td>

                    <a href="#" data-toggle="modal" data-target="#modal-reclamation-edit-{{reclamation.id}}" class="btn btn-social-icon btn-dropbox" ><i class="fa fa-edit"></i></a>

                    {{ render(controller( 'App\\Controller\\ReclamationController::editReclamation',{'id':reclamation.id} )) }}
                </td>
                </tr>
            {%endfor%}
            </tbody>

        </table>
    </div>

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.1.1/jquery.min.js"></script>

    <script>

        function initMap() {
            return $.ajax({
                type: "POST",
                url: Routing.generate('list-reclamation'),
                success: function (data) {
                    var i;
                    var confirmed = 0;
                    var markerz = [];
                    for (i = 0; i < data.reclamations.length; i++) {
                        var city = data.reclamations[i].city;
                        var lat = data.reclamations[i].latitude;
                        var lng = data.reclamations[i].longitude;
                        var adress = data.reclamations[i].adress;

                        var LatLng = [adress, lat, lng];
                        markerz.push(LatLng)




                    }
                    var map;
                    var bounds = new google.maps.LatLngBounds();
                    var mapOptions = {
                        mapTypeId: 'roadmap',

                    };

                    // Display a map on the page
                    map = new google.maps.Map(document.getElementById("map_canvas"), mapOptions);
                    map.setTilt(45);

                    // Multiple Markers
                    var markers = markerz;

                    //console.log(markers);
                    // Info Window Content
                    var infoWindowContent = [
                        ['<div class="info_content">' +
                                    '<h3>London Eye</h3>' +
                                    '<p>The London Eye is a giant Ferris wheel situated on the banks of the River Thames. The entire structure is 135 metres (443 ft) tall and the wheel has a diameter of 120 metres (394 ft).</p>' + '</div>'],
                        ['<div class="info_content">' +
                                    '<h3>Palace of Westminster</h3>' +
                                    '<p>The Palace of Westminster is the meeting place of the House of Commons and the House of Lords, the two houses of the Parliament of the United Kingdom. Commonly known as the Houses of Parliament after its tenants.</p>' +
                                    '</div>']
                    ];

                    // Display multiple markers on a map
                    var infoWindow = new google.maps.InfoWindow(), marker, i;

                    // Loop through our array of markers & place each one on the map  
                    for (i = 0; i < markers.length; i++) {
                        var position = new google.maps.LatLng(markers[i][1], markers[i][2]);
                        bounds.extend(position);
                        var lat = 36.741114;
                        var lng = 9.171574;
                        var homeLating = new google.maps.LatLng(lat, lng);
                        marker = new google.maps.Marker({
                            position: position,
                            center: homeLating,
                            zoom: 12,
                            map: map,
                            title: markers[i][0]
                        });

                        // Allow each marker to have an info window    
                        google.maps.event.addListener(marker, 'click', (function (marker, i) {
                            return function () {
                                infoWindow.setContent(infoWindowContent[i][0]);
                                infoWindow.open(map, marker);
                            }
                        })(marker, i));

                        // Automatically center the map fitting all markers on the screen
                        map.fitBounds(bounds);
                    }

                    // Override our map zoom level once our fitBounds function runs (Make sure it only runs once)
                    var boundsListener = google.maps.event.addListener((map), 'bounds_changed', function (event) {
                        this.setZoom(10);
                        google.maps.event.removeListener(boundsListener);
                    });

                }

            });

        }



    </script>


{% endblock %}


