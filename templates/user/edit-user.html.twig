

<style>
    .form-inline .form-group {
        display: block; 

    }
    .form-inline .form-control {
        display: block; 
        width: 100%; 

    }
    img.img-circle {
        width: 100px;
        height:100%;
}
</style>

<div class="modal fade" id="modal-user-edit-{{id}}">
    
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title">Modifier Utilisateur</h4>
            </div>
            <div class="modal-body">
                {{ form_start(form, { 'action': path('edit-user', { 'id': id}), 'attr': { 'class': 'edit-user' } }) }}

                <div class="form-group">

                    <label >Pr√©nom</label>
                    {{ form_widget(form.firstname)}}
                </div>
                <div class="form-group">
                    <label >Nom</label>
                    {{ form_widget(form.lastname)}}
                </div>
                <div class="form-group">
                    <label >Email</label>
                    {{ form_widget(form.email)}}
                </div>

                <div class="form-group">
                    <label >Photo</label>
                    {%if user.photo is empty %}
                        <img src="{{ asset('uploads/users/avatar.jpg' ) }}" class="img-circle" style="height:100px;width:100px;" alt="User " >

                    {%else%}
                        <img src="{{ asset('uploads/users/' ~ user.photo) }}" class="img-circle" alt="User Image" >
                    {%endif%}

                    {{form_widget(form.photo)}}
                </div>
                <div class="form-group">
                    <label >Profession</label>
                    {{form_widget(form.profession)}}
                </div>
                <div class="form-group">
                    <label >CV</label>
                    {{form_widget(form.cv)}}
                </div>

            </div>
            <div class="modal-footer">

                <input type="submit" class="btn btn-primary"></input>
            </div>
            {{ form_end(form) }}
        </div>
        <!-- /.modal-content -->
    </div>
    <!-- /.modal-dialog -->
</div>